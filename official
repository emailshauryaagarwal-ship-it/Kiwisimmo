<script>
  // ---------- SIMPLE "DATABASE" USING LOCALSTORAGE ----------

  const DB_KEYS = {
    USERS: "kiwisimmo_users",
    ITEMS: "kiwisimmo_items",
    NOTICES: "kiwisimmo_notices",
  };

  function loadArray(key) {
    try {
      const raw = localStorage.getItem(key);
      if (!raw) return [];
      return JSON.parse(raw);
    } catch (e) {
      console.error("Failed to parse", key, e);
      return [];
    }
  }

  function saveArray(key, arr) {
    localStorage.setItem(key, JSON.stringify(arr));
  }

  function findUser(username) {
    const users = loadArray(DB_KEYS.USERS);
    return users.find(u => u.username.toLowerCase() === username.toLowerCase());
  }

  function updateUser(user) {
    const users = loadArray(DB_KEYS.USERS);
    const idx = users.findIndex(u => u.username.toLowerCase() === user.username.toLowerCase());
    if (idx >= 0) {
      users[idx] = user;
      saveArray(DB_KEYS.USERS, users);
    }
  }

  // ---------- DOM ELEMENTS ----------

  const roleChips = document.querySelectorAll(".role-chip");
  const civilianAuthArea = document.getElementById("civilianAuthArea");
  const managementAuthArea = document.getElementById("managementAuthArea");

  const authError = document.getElementById("authError");
  const authErrorText = document.getElementById("authErrorText");
  const authSuccess = document.getElementById("authSuccess");
  const authSuccessText = document.getElementById("authSuccessText");

  const civUsernameInput = document.getElementById("civUsername");
  const civPasswordInput = document.getElementById("civPassword");
  const btnCivLogin = document.getElementById("btnCivLogin");
  const btnCivSignup = document.getElementById("btnCivSignup");

  const mgmtUsernameInput = document.getElementById("mgmtUsername");
  const mgmtPasswordInput = document.getElementById("mgmtPassword");
  const btnMgmtLogin = document.getElementById("btnMgmtLogin");

  const civilianDashboard = document.getElementById("civilianDashboard");
  const managementDashboard = document.getElementById("managementDashboard");
  const dashboardEmptyState = document.getElementById("dashboardEmptyState");

  const topbarUser = document.getElementById("topbarUser");
  const topbarLoggedOut = document.getElementById("topbarLoggedOut");
  const topbarName = document.getElementById("topbarName");
  const topbarRole = document.getElementById("topbarRole");
  const topbarAvatar = document.getElementById("topbarAvatar");
  const logoutBtn = document.getElementById("logoutBtn");

  const noticesListCivilian = document.getElementById("noticesListCivilian");
  const noticesListManagement = document.getElementById("noticesListManagement");

  const noticeTitleInput = document.getElementById("noticeTitle");
  const noticeBodyInput = document.getElementById("noticeBody");
  const btnPublishNotice = document.getElementById("btnPublishNotice");
  const noticeMsg = document.getElementById("noticeMsg");
  const noticeMsgText = document.getElementById("noticeMsgText");

  const usersTableBody = document.querySelector("#usersTable tbody");

  const civPointsBadge = document.getElementById("civPointsBadge");
  const civPointsValue = document.getElementById("civPointsValue");

  const itemTitleInput = document.getElementById("itemTitle");
  const itemDescInput = document.getElementById("itemDesc");
  const itemPriceInput = document.getElementById("itemPrice");
  const btnCreateItem = document.getElementById("btnCreateItem");
  const marketListCivilian = document.getElementById("marketListCivilian");
  const civMarketMsg = document.getElementById("civMarketMsg");
  const civMarketMsgText = document.getElementById("civMarketMsgText");

  let currentSession = {
    role: null,   // "civilian" or "management"
    username: null
  };

  // ---------- UI HELPERS ----------

  function showError(msg) {
    authErrorText.textContent = msg;
    authError.style.display = "flex";
    authSuccess.style.display = "none";
  }

  function showSuccess(msg) {
    authSuccessText.textContent = msg;
    authSuccess.style.display = "flex";
    authError.style.display = "none";
  }

  function clearAuthMessages() {
    authError.style.display = "none";
    authSuccess.style.display = "none";
  }

  function setDashboard(role, username) {
    currentSession.role = role;
    currentSession.username = username;

    // Top bar
    if (role && username) {
      topbarUser.style.display = "flex";
      topbarLoggedOut.style.display = "none";
      topbarName.textContent = username;
      topbarRole.textContent =
        role === "management" ? "Management" : "Civilian";
      topbarAvatar.textContent = username.charAt(0).toUpperCase();
    } else {
      topbarUser.style.display = "none";
      topbarLoggedOut.style.display = "block";
    }

    // Dashboards
    civilianDashboard.classList.add("hidden");
    managementDashboard.classList.add("hidden");
    dashboardEmptyState.classList.remove("hidden");

    if (role === "civilian") {
      dashboardEmptyState.classList.add("hidden");
      civilianDashboard.classList.remove("hidden");
      loadCivPoints();
      renderMarketList();
    } else if (role === "management") {
      dashboardEmptyState.classList.add("hidden");
      managementDashboard.classList.remove("hidden");
      renderUsersTable();
    }

    renderNotices();
  }

  function loadCivPoints() {
    if (!currentSession.username) return;
    const user = findUser(currentSession.username);
    if (user) {
      civPointsValue.textContent = user.points ?? 100;
    }
  }

  // ---------- ROLE TOGGLE ----------

  roleChips.forEach(chip => {
    chip.addEventListener("click", () => {
      roleChips.forEach(c => c.classList.remove("active"));
      chip.classList.add("active");
      const role = chip.dataset.role;
      clearAuthMessages();
      if (role === "civilian") {
        civilianAuthArea.classList.remove("hidden");
        managementAuthArea.classList.add("hidden");
      } else {
        civilianAuthArea.classList.add("hidden");
        managementAuthArea.classList.remove("hidden");
      }
    });
  });

  // ---------- AUTH: CIVILIAN ----------

  btnCivSignup.addEventListener("click", () => {
    clearAuthMessages();
    const username = civUsernameInput.value.trim();
    const password = civPasswordInput.value.trim();

    if (!username || !password) {
      showError("Please enter both a username and password.");
      return;
    }

    if (findUser(username)) {
      showError("That username is already taken. Choose another.");
      return;
    }

    const users = loadArray(DB_KEYS.USERS);
    users.push({
      username,
      password,
      role: "civilian",
      points: 100, // default starting points
      banned: false
    });
    saveArray(DB_KEYS.USERS, users);

    showSuccess("Account created. You can now log in as a civilian.");
  });

  btnCivLogin.addEventListener("click", () => {
    clearAuthMessages();
    const username = civUsernameInput.value.trim();
    const password = civPasswordInput.value.trim();

    if (!username || !password) {
      showError("Please enter your username and password to log in.");
      return;
    }

    const user = findUser(username);
    if (!user || user.role !== "civilian" || user.password !== password) {
      showError("Invalid civilian credentials.");
      return;
    }

    if (user.banned) {
      showError("This account is banned/suspended by management.");
      return;
    }

    showSuccess("Logged in as Civilian.");
    setDashboard("civilian", user.username);
  });

  // ---------- AUTH: MANAGEMENT ----------

  const MGMT_USERNAME = "Goat_201455";
  const MGMT_PASSWORD = "676767";

  btnMgmtLogin.addEventListener("click", () => {
    clearAuthMessages();
    const username = mgmtUsernameInput.value.trim();
    const password = mgmtPasswordInput.value.trim();

    if (!username || !password) {
      showError("Enter both management username and password.");
      return;
    }

    if (username === MGMT_USERNAME && password === MGMT_PASSWORD) {
      showSuccess("Logged in as Management.");
      setDashboard("management", username);
    } else {
      showError("Invalid management credentials.");
    }
  });

  // ---------- LOGOUT ----------

  logoutBtn.addEventListener("click", () => {
    currentSession.role = null;
    currentSession.username = null;
    setDashboard(null, null);
    clearAuthMessages();
  });

  // ---------- NOTICES ----------

  function renderNotices() {
    const notices = loadArray(DB_KEYS.NOTICES).sort(
      (a, b) => new Date(b.createdAt) - new Date(a.createdAt)
    );

    function createNoticeHTML(n) {
      const date = new Date(n.createdAt);
      const formatted = date.toLocaleString();
      return `
        <div class="notice-card">
          <div class="notice-title">${n.title || "(Untitled notice)"}</div>
          <div>${n.body || ""}</div>
          <div class="notice-meta">
            <span>From: Management</span> ‚Ä¢
            <span>${formatted}</span>
          </div>
        </div>
      `;
    }

    noticesListCivilian.innerHTML = notices.length
      ? notices.map(createNoticeHTML).join("")
      : `<p class="caption">No notices yet. Management will post updates here.</p>`;

    noticesListManagement.innerHTML = notices.length
      ? notices.map(createNoticeHTML).join("")
      : `<p class="caption">No notices yet. Publish one above.</p>`;
  }

  btnPublishNotice.addEventListener("click", () => {
    if (currentSession.role !== "management") return;

    const title = noticeTitleInput.value.trim();
    const body = noticeBodyInput.value.trim();

    if (!title || !body) {
      noticeMsg.classList.remove("success-msg");
      noticeMsg.classList.add("error-msg");
      noticeMsg.style.display = "flex";
      noticeMsgText.textContent = "Please provide both a title and message.";
      return;
    }

    const notices = loadArray(DB_KEYS.NOTICES);
    notices.push({
      id: Date.now(),
      title,
      body,
      createdAt: new Date().toISOString()
    });
    saveArray(DB_KEYS.NOTICES, notices);

    noticeTitleInput.value = "";
    noticeBodyInput.value = "";

    noticeMsg.classList.remove("error-msg");
    noticeMsg.classList.add("success-msg");
    noticeMsg.style.display = "flex";
    noticeMsgText.textContent = "Notice published for all civilians.";
    renderNotices();
  });

  // ---------- USERS TABLE (MANAGEMENT) ----------

  function renderUsersTable() {
    const users = loadArray(DB_KEYS.USERS).filter(u => u.role === "civilian");
    if (!users.length) {
      usersTableBody.innerHTML = `
        <tr>
          <td colspan="4" style="color:var(--text-muted);padding-top:6px;">
            No civilians have signed up yet.
          </td>
        </tr>
      `;
      return;
    }

    usersTableBody.innerHTML = "";
    users.forEach(user => {
      const tr = document.createElement("tr");

      const tdUser = document.createElement("td");
      tdUser.textContent = user.username;

      const tdStatus = document.createElement("td");
      const dot = document.createElement("span");
      dot.className = "status-dot " + (user.banned ? "red" : "green");
      const text = document.createElement("span");
      text.textContent = user.banned ? "Banned" : "Active";
      tdStatus.appendChild(dot);
      tdStatus.appendChild(text);

      const tdPoints = document.createElement("td");
      tdPoints.textContent = user.points ?? 100;

      const tdAction = document.createElement("td");
      const btn = document.createElement("button");
      btn.className = "secondary " + (user.banned ? "" : "danger");
      btn.style.fontSize = "0.72rem";
      btn.textContent = user.banned ? "Unban" : "Ban";
      btn.addEventListener("click", () => {
        user.banned = !user.banned;
        updateUser(user);
        renderUsersTable();
      });
      tdAction.appendChild(btn);

      tr.appendChild(tdUser);
      tr.appendChild(tdStatus);
      tr.appendChild(tdPoints);
      tr.appendChild(tdAction);

      usersTableBody.appendChild(tr);
    });
  }

  // ---------- MARKET / AUCTIONS ----------

  function renderMarketList() {
    const items = loadArray(DB_KEYS.ITEMS).sort(
      (a, b) => new Date(b.createdAt) - new Date(a.createdAt)
    );
    if (!items.length) {
      marketListCivilian.innerHTML =
        `<p class="caption">No items listed yet. Be the first to auction something!</p>`;
      return;
    }
    marketListCivilian.innerHTML = "";
    items.forEach(item => {
      const div = document.createElement("div");
      div.className = "market-card" + (item.status === "sold" ? " status-sold" : "");
      div.innerHTML = `
        <div class="market-top-row">
          <div>
            <div class="market-title">${item.title}</div>
            <div class="market-owner">Owner: ${item.owner}</div>
          </div>
          <div class="pill green">üíé ${item.price} pts</div>
        </div>
        <div>${item.desc}</div>
        <div class="market-tags">
          <span class="pill">${item.status === "sold" ? "Sold" : "For sale"}</span>
        </div>
      `;

      if (item.status !== "sold" && currentSession.role === "civilian") {
        const buyBtn = document.createElement("button");
        buyBtn.style.marginTop = "4px";
        buyBtn.textContent = "Buy with points";
        buyBtn.addEventListener("click", () => buyItem(item));
        div.appendChild(buyBtn);
      }

      marketListCivilian.appendChild(div);
    });
  }

  function buyItem(item) {
    civMarketMsg.style.display = "none";
    if (!currentSession.username) return;

    const user = findUser(currentSession.username);
    if (!user) return;
    if (user.banned) {
      civMarketMsgText.textContent = "Your account is banned. You cannot buy items.";
      civMarketMsg.style.display = "flex";
      return;
    }

    if (item.status === "sold") {
      civMarketMsgText.textContent = "This item is already sold.";
      civMarketMsg.style.display = "flex";
      return;
    }

    const price = Number(item.price) || 0;
    if (user.points < price) {
      civMarketMsgText.textContent = "Not enough points for this purchase.";
      civMarketMsg.style.display = "flex";
      return;
    }

    // Deduct from buyer
    user.points -= price;
    updateUser(user);

    // Reward seller (if civilian)
    if (item.owner) {
      const seller = findUser(item.owner);
      if (seller && !seller.banned) {
        seller.points = (seller.points ?? 100) + price;
        updateUser(seller);
      }
    }

    // Mark item as sold
    const items = loadArray(DB_KEYS.ITEMS);
    const idx = items.findIndex(i => i.id === item.id);
    if (idx >= 0) {
      items[idx].status = "sold";
      saveArray(DB_KEYS.ITEMS, items);
    }

    loadCivPoints();
    renderUsersTable();
    renderMarketList();
  }

  btnCreateItem.addEventListener("click", () => {
    civMarketMsg.style.display = "none";

    if (currentSession.role !== "civilian" || !currentSession.username) {
      civMarketMsgText.textContent = "You must be logged in as a civilian to create an auction.";
      civMarketMsg.style.display = "flex";
      return;
    }

    const title = itemTitleInput.value.trim();
    const desc = itemDescInput.value.trim();
    const price = Number(itemPriceInput.value.trim());

    if (!title || !desc || !price || price <= 0) {
      civMarketMsgText.textContent = "Please fill all fields and use a valid price.";
      civMarketMsg.style.display = "flex";
      return;
    }

    const items = loadArray(DB_KEYS.ITEMS);
    items.push({
      id: Date.now(),
      title,
      desc,
      price,
      owner: currentSession.username,
      status: "for sale",
      createdAt: new Date().toISOString()
    });
    saveArray(DB_KEYS.ITEMS, items);

    itemTitleInput.value = "";
    itemDescInput.value = "";
    itemPriceInput.value = "";

    renderMarketList();
  });

  // ---------- INIT ----------

  (function init() {
    setDashboard(null, null);
    renderNotices();
  })();

</script>
</body>
</html>
